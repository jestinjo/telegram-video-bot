    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/apps/telegram-video-bot/dist/main.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "nx: nx run @telegram-video-bot/telegram-video-bot:build",
            "env": {
                "BOT_TOKEN": "BOT_TOKEN",
                "BOT_API": "http://host.docker.internal:8081",
                "ACCESS_IDS": "ACCESS_IDS"
            }
        }
    ]
}
